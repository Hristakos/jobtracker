<%- include('header')%>
<div class="show-grid-container">
  <div class="grid-item"><strong>Types</strong></div>
  <div class="grid-item"><strong>Role</strong></div>
  <div class="grid-item"><strong>Description</strong></div>
  <% if(getAllJobs.length){ for(var i = 0;i < getAllJobs.length;i++) { %>
  <div class="grid-item"><%=getAllJobs[i].type%></div>
  <div class="grid-item"><%=getAllJobs[i].title%></div>
  <div class="grid-item">
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal<%=i%>" data-index=`1`>
      View Job Description
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal<%=i%>" role="dialog">
      <div class="modal-dialog modal-lg">
        <div stylyt="background-image: url(<%-`{getAllJobs[i].company_logo}`%>);" class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
            <h2 class="modal-title">
              <%=`${getAllJobs[i].company}, ${getAllJobs[i].location} -
              ${getAllJobs[i].title} (${getAllJobs[i].type}) `%>
            </h2>
          </div>
          <div class="modal-body">
            <p><%-`${getAllJobs[i].description} `%></p>
            <p>
              <span class="modal-span">How To Apply:</span> <%-getAllJobs[i].how_to_apply%> Company URL:
              <a href="<%=getAllJobs[i].company_url%>"><%=getAllJobs[i].company_url%></a>
              <!-- <img src="<%-getAllJobs[i].company_logo%>" alt=""> -->
            </p>
          </div>
          <div class="modal-footer">

            <a class="btn btn-success" href="/saveJob/<%= getAllJobs[i].api_id %>" />Save This Job</a>
            <button type="button" class="btn btn-default" data-dismiss="modal">
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%}}%>

</div>

<div style="margin-top: 60px;">
  <%- include('footer')%>
</div>